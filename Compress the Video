# cook your dish here
for i in range(int(input())):
    f=int(input())
    x=[int(i) for i in input().split()]
    if f==1:
        print(1)
        continue
    c=1
    if f>1:
        for i in range(f-1):
            if x[i]==x[i+1]:
                pass
            else:
                c+=1
    print(c)        
    
    
            
